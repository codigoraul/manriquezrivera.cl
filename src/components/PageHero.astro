---
interface Props {
  title: string;
  breadcrumbs?: Array<{ label: string; href?: string }>;
  backgroundImage?: string;
}

const { title, breadcrumbs = [], backgroundImage } = Astro.props as Props;
const bgImage = backgroundImage ? (backgroundImage.startsWith('http') ? backgroundImage : backgroundImage) : null;
---

<section class="relative bg-primary min-h-[300px] flex items-center justify-center overflow-hidden">
  <!-- Background Image with Overlay -->
  {bgImage && (
    <div class="absolute inset-0">
      <img 
        src={bgImage} 
        alt={title}
        class="w-full h-full object-cover"
      />
      <div class="absolute inset-0 bg-linear-to-r from-black/80 to-black/60"></div>
    </div>
  )}
  
  <!-- Content -->
  <div class="relative z-10 max-w-container mx-auto px-6 py-16 text-center text-white">
    <nav aria-label="Breadcrumb" class="mb-6">
      <ol class="flex items-center justify-center gap-2 text-sm">
        {breadcrumbs.map((crumb, index) => (
          <li class="flex items-center gap-2">
            {index > 0 && (
              <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-secondary">
                <path d="m9 18 6-6-6-6"/>
              </svg>
            )}
            {crumb.href ? (
              <a href={crumb.href} class="text-white/80 hover:text-secondary transition-colors duration-300">
                {crumb.label}
              </a>
            ) : (
              <span class="text-secondary font-medium">{crumb.label}</span>
            )}
          </li>
        ))}
      </ol>
    </nav>

    <h1 class="text-white text-2xl md:text-3xl lg:text-[38px] font-bold leading-tight">
      {title}
    </h1>
  </div>
</section>
