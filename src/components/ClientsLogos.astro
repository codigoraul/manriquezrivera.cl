---
const BASE_URL = import.meta.env.BASE_URL || '/';

const logos = [
  {
    name: 'Empresa 1',
    src: 'images/logos/cliente-1.png',
  },
  {
    name: 'Empresa 2',
    src: 'images/logos/cliente-2.png',
  },
  {
    name: 'Empresa 3',
    src: 'images/logos/cliente-1.png',
  },
  {
    name: 'Empresa 4',
    src: 'images/logos/cliente-2.png',
  },
  {
    name: 'Empresa 5',
    src: 'images/logos/cliente-1.png',
  },
];
---

<section class="py-16 bg-white border-t border-gray-100">
  <div class="max-w-container mx-auto px-6">
    <div class="text-center mb-10">
      <p class="text-xs md:text-sm uppercase tracking-[0.3em] text-secondary font-semibold mb-2">
        Nuestros Clientes
      </p>
      <h2 class="text-2xl md:text-3xl lg:text-[32px] font-bold text-primary">
        Empresas que conf√≠an en nuestro estudio
      </h2>
    </div>

    <div class="relative">
      <div class="flex gap-10 overflow-x-auto scrollbar-thin scrollbar-thumb-gray-300 scrollbar-track-transparent pb-4" aria-label="Logos de clientes">
        {logos.map((logo) => (
          <div class="flex-shrink-0 w-40 h-20 md:w-48 md:h-24 flex items-center justify-center bg-gray-50 rounded-xl shadow-sm border border-gray-100">
            <img
              src={`${BASE_URL}${logo.src}`}
              alt={logo.name}
              class="max-h-12 md:max-h-14 w-auto object-contain opacity-80 hover:opacity-100 transition-opacity duration-200"
              loading="lazy"
            />
          </div>
        ))}
      </div>
    </div>
  </div>
</section>
